<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- id 고정 : conversionService -->
	<bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean"/>
	
	<!-- 타입 변환 테스트를 위한 value object -->
	<bean id="valueObject" class="ddit.or.kr.bean.type.fmconversion.ValueObject">
		<property name="regDt" value="2017-12-20" />
		<property name="modDt" value="2017.12.20" />
		<property name="price" value="7,000" />
	</bean> 

</beans>









