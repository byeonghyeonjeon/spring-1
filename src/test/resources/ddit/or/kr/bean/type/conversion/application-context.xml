<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	
	<bean id="dateStringConverter" class="ddit.or.kr.bean.type.conversion.DateStringConverter">
		<!-- pattern 주입 -->
		<property name="pattern" value="MM-dd-yyyy"/>
	</bean>
	<!-- yyyy-MM-dd -->
	<!-- MM-dd-yyyy -->

	<!-- conversionService 등록 : **** id는 conversionService로 고정되어 있다 *** )-->
	<bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
		<property name="converters">
			<set>
				<ref bean="dateStringConverter"/>
			</set>
		</property>
	</bean>
	
	<bean id="valueObject" class="ddit.or.kr.bean.type.ValueObject">
		<!-- date속성에 주입하는 예제 -->
		<!-- <property name="dt" value="2017-12-20"/> -->
		<property name="dt" value="12-20-2017"/>
	</bean>
</beans>







