<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<bean id="TimeAdvice" class="ddit.or.kr.aop.advice.TimeAdvice"></bean>

	<bean id="AopService" class="ddit.or.kr.aop.service.AopServiceImpl"></bean>

	<aop:config>
		<aop:pointcut id="TimeAdvicePointCut" expression="execution(* ddit.or.kr.aop.service.*.* (..))"  />
		<aop:aspect ref="TimeAdvice">
		<aop:around pointcut-ref="TimeAdvicePointCut" method="around"/>
		</aop:aspect>
	</aop:config>
	
</beans>
